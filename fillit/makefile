.PHONY: all, fclean, clean, re

NAME = fillit

SRC =	fillit.c\
		fillit_blocks_maker.c\
		fillit_checks.c\
		fillit_cleaner.c\
		fillit_coords.c\
		fillit_display.c\
		fillit_erazer.c\
		fillit_errors.c\
		fillit_files.c\
		fillit_init.c\
		fillit_list.c\
		fillit_map.c\
		fillit_resolve.c

LIB_PATH = ./libft

LIBS = ft

INCLUDE_PATH = $(LIB_PATH)

INCS = -I./ -I$(INCLUDE_PATH)

OBJ = $(SRC:.c=.o)

CC = gcc

STATIC_LIBS = $(addsuffix $(LIBS), -l)

CFLAGS = -Wall -Wextra -Werror $(INCS)

all: $(NAME)

$(NAME): $(OBJ)
	$(MAKE) -C $(LIB_PATH)/ all
	$(CC) -Wall -Werror -Wextra -I./ -I./libft -o $(NAME) $(OBJ) -L./libft -lft

clean:
	$(MAKE) -C $(LIB_PATH)/ clean
	rm -rf $(OBJ)

fclean: clean
	$(MAKE) -C $(LIB_PATH)/ fclean
	rm -rf $(NAME)

re: fclean all

mrPropre: fclean
